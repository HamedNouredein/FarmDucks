@model FarmDucks.Models.Cycle

<h2>Are you sure you want to delete @(Model?.Name ?? "this item")?</h2>

<div>
    <p><strong>Farm:</strong> @(Model?.Farm?.Name ?? "No Farm")</p>
    <p><strong>Birth Date:</strong> @(Model?.BirthDate.ToShortDateString() ?? "N/A")</p>
</div>

<form asp-action="Delete" asp-controller="Cycle" method="post">
    <input type="hidden" name="id" value="@Model?.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

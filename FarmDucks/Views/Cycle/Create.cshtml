@model FarmDucks.ViewModels.CycleViewModel

<h1>Create Cycle</h1>

<form asp-controller="Cycle" asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="Name">Cycle Name</label>
        <input type="text" class="form-control" id="Name" name="Cycle.Name" value="@Model.Cycle.Name" />
    </div>

    <div class="form-group">
        <label for="BirthDate">Birth Date</label>
        <input type="date" class="form-control" id="BirthDate" name="Cycle.BirthDate" value="@Model.Cycle.BirthDate.ToString("yyyy-MM-dd")" />
    </div>

    <div class="form-group">
        <label for="FarmId">Farm</label>
        <select class="form-control" id="FarmId" name="Cycle.FarmId" asp-items="@(new SelectList(Model.Farms, "Id", "Name"))">
            <option value="">Select a Farm</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Notes">Notes</label>
        <textarea class="form-control" id="Notes" name="Cycle.Notes">@Model.Cycle.Notes</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a href="@Url.Action("Index", "Cycle")">Back to List</a>

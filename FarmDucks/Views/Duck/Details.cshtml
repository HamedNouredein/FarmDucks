@model FarmDucks.Models.Duck

@{
    ViewData["Title"] = "Duck Details";
}

<h1>@Model.Name's Details</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Name: @Model.Name</h5>
        <p class="card-text">Weight: @Model.Weight kg</p>
        <p class="card-text">Cycle: @Model.Cycle.Name</p>
        <p class="card-text">Notes: @Model.Notes</p>
    </div>
</div>

<a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
